<strong>Developer Participant Picker</strong>
<ul>
  <% Participant.all.each do |p| %>
    <li>
      <% if Current.user == p %>
        <strong><%= p.name %></strong>
      <% else %>
        <%= form_with url: impersonate_path(participant_id: p.id), method: :post do |form| %>
          <%= submit_tag "Impersonate #{p.name}" %>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>